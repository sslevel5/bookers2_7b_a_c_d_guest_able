<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if user_signed_in? %>
        <div class="search_form">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Book']]) %>
            <%= f.select :search, options_for_select([["perfect","perfect_match"], ["forward","forward_match"],  ["backward","backward_match"], ["partial","partial_match"]]) %>
            <%= f.submit "search" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>