  <h2>Comment</h2>
  <thead>
    <tr>
      <th>name</th>
      <th>comment</th>
      <th></th>
    </tr>
  </thead>
  <% @book.book_comments.each do |book_comment| %>
  <tbody>
    <tr>
      <td>
        <%= link_to(@book.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(book_id: book_comment.book_id, id: book_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",remote: true %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
