<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <%= form_with model: @book, url: books_path, method: :get do |f| %>
        <%= f.select :scope, options_for_select([["new", "latest"], ["old", "old"], ["star", "star_count"]]) %>
        <%= f.submit "Submit" %>
        <% end %>
      <!--% sorted_books = @books.includes(:favorites).sort_by { |book| book.get_book_week_favorite_count }.reverse %-->
      <%= render 'index', books: @books %>
    </div>
  </div>
</div>