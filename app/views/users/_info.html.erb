<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follow</th>
    <th>
      <%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>Follower</th>
    <th><%= link_to user.followers.count,user_followers_path(user) %></th>
  </tr>
</table>

<%= render "users/dm", user: @user, room: @room, entry: @entry, roomId: @roomId, isRoom: @isRoom, current_user: current_user %>

<div class='container'>
  <div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  <div class='row'><p></p></div>
  <div class='row'>
  <% if current_user != user %>
    <%= render "relationships/btn", user: user, options: { class: ""} %>
  <% end %>
  </div>
</div>

