<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>Follow : <%= user.followings.count %></td>
        <td>Follower : <%= user.followers.count %></td>
        <% if current_user != user %>
          <td>
            <%= render "relationships/btn", user: user, options: { class: ""} %>
          </td>
        <% else %>
            <td></td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
